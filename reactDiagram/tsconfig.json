{
  "compileOnSave": false,
  "compilerOptions": {
    "suppressExcessPropertyErrors": true,
    "declaration": false,
    "outDir": "dist/@types",
    "strictNullChecks": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "target": "es6",
    "module": "esnext",
    "lib": [
      "dom",
      "es6"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "./dist"
  ]
}
